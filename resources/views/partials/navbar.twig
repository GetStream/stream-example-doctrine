<div class="navbar navbar-inverse navbar-static-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="https://getstream.io">
        <img alt="Brand" style="width:25px; height:25px;" src="http://insidesaassales.com/wp-content/uploads/iss_images/Stream.png">
      </a>
    </div>
    <ul class="nav navbar-nav navbar-left">
      <li>
        <a href="https://getstream.io">About GetStream.io</a>
      </li>
      {% if user %}
      <li {% if path == '/' %}class="active"{% endif %}>
        <a href="/">Home</a>
      </li>
      <li {% if path == '/profiles' %} class="active"{% endif %}>
        <a href="/profiles">Profiles</a>
      </li>
      {% endif %}
    </ul>
    <ul class="nav navbar-nav navbar-right">
      {% if user %}
      <li class="dropdown {% if path == '/'~ user.username %}active{% endif %}">
        <a href="#" class="dropdown-toggle"
           data-toggle="dropdown"
           role="button"
           aria-haspopup="true"
           aria-expanded="false"
        >{{ user.username }} <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li {% if path == '/'~ user.username %}class="dark"{% endif %}>
            <a href="/{{ user.username }}">Your profile</a>
          </li>
          <li>
            <a href="/logout">Logout</a>
          </li>
        </ul>
      </li>
      {% else %}
      <li {% if path == "/signup" %}class="active"{% endif %}>
        <a href="/signup">Register</a>
      </li>
        <li {% if path == "/login" %}class="active"{% endif %}>
        <a href="/login">Login</a>
      </li>
      {% endif %}
    </ul>
  </div>
</div>
