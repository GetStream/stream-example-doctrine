{% extends 'layouts/default.twig' %}

{% block content %}
<div class="row">
  <div class="page-header">
    <h1>Login</h1>
  </div>
  <div class="row form-component">
    <form class="form-horizontal col-lg-6" method="post" action="/login">
      <fieldset>
        {% if errors.login_failed %}
        <div class="alert alert-dismissible alert-danger">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <strong>Oh snap!</strong> Those we incorrect credentials. Try again.
        </div>
        {% endif %}
        <div class="row form-group">
          <label for="email" class="col-lg-3 control-label">Email</label>
          <div class="col-lg-6">
            <input class="form-control" name="email" type="text">
          </div>
        </div>
        <div class="row form-group">
          <label for="password" class="col-lg-3 control-label">Password</label>
          <div class="col-lg-6">
            <input class="form-control" name="password" type="password">
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-3 col-lg-offset-3">
            <button class="form-control btn btn-primary" type="submit">Login</button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>
{% endblock %}
